<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageButton
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        android:id="@+id/register_step1_imgbtn_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/back"
        android:background="@color/transparency"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="회원가입"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        style="@style/BoldText"/>

    <EditText
        android:id="@+id/register_step1_edittext_id"
        android:background="@drawable/custom_edittext"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="20dp"
        android:paddingStart="15dp"
        android:paddingVertical="13dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="사용하실 아이디"/>

    <EditText
        android:id="@+id/register_step1_password"
        android:background="@drawable/custom_edittext"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="20dp"
        android:paddingStart="15dp"
        android:paddingVertical="13dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="사용하실 비밀번호"
        android:inputType="textPassword"/>

    <Button
        android:id="@+id/register_step1_btn_next"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="20dp"
        android:background="@drawable/custom_btn2"
        android:text="다음"
        android:textStyle="bold"
        android:textColor="@color/white"/>


</LinearLayout>