<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingHorizontal="20dp"

    tools:context=".src.fragment.profile.ProfileFragment">

    <androidx.core.widget.NestedScrollView
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:scrollbars="none">

        <LinearLayout
            android:layout_marginTop="26dp"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageButton
                    android:id="@+id/profile_imgbtn_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:background="@color/transparency"
                    android:src="@drawable/back" />


                <TextView
                    android:id="@+id/profile_text_modify"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@color/transparency"
                    android:text="@string/profile_modify" />

            </RelativeLayout>


            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profile_circleimage_profile"
                android:layout_height="150dp"
                android:src ="@drawable/ic_basic_profile"
                app:civ_border_width="2dp"
                android:layout_width="150dp"
                app:civ_border_color="@color/cardview_light_background"/>


            <LinearLayout
                android:layout_marginVertical="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/profile_text_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/BoldText"
                    android:textSize="22sp"
                    android:text="이름"/>

                <TextView
                    android:id="@+id/profile_text_age"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="(나이)"
                    android:textSize="22sp"
                    android:textStyle="bold" />


            </LinearLayout>

            <LinearLayout
                android:layout_marginHorizontal="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="주소"/>
                <TextView
                    android:layout_marginTop="5dp"
                    android:id="@+id/profile_text_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:text="주소"/>

                <TextView
                    android:layout_marginTop="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="방문 날짜"/>

<LinearLayout
    android:paddingTop="5dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <TextView
        android:id="@+id/profile_text_date_mon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:visibility="gone"
        android:textStyle="bold"
        android:text="토요일 16:00 - 17:00"/>
    <TextView
        android:id="@+id/profile_text_date_tue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:visibility="gone"
        android:textStyle="bold"
        android:text="토요일 16:00 - 17:00"/>
    <TextView
        android:id="@+id/profile_text_date_wed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:text="토요일 16:00 - 17:00"/>
    <TextView
        android:id="@+id/profile_text_date_thu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:visibility="gone"
        android:textStyle="bold"
        android:text="토요일 16:00 - 17:00"/>
    <TextView
        android:id="@+id/profile_text_date_fri"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:visibility="gone"
        android:textStyle="bold"
        android:text="토요일 16:00 - 17:00"/>
    <TextView
        android:id="@+id/profile_text_date_sat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:visibility="gone"
        android:textStyle="bold"
        android:text="토요일 16:00 - 17:00"/>
    <TextView
        android:id="@+id/profile_text_date_sun"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:visibility="gone"
        android:text="토요일 16:00 - 17:00"/>

</LinearLayout>









            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/profile_recyclerview"
                android:nestedScrollingEnabled="false"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>




        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <Button
        android:id="@+id/profile_btn_test"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="20dp"
        android:background="@drawable/custom_btn1"
        android:text="@string/profile_test"
        android:textColor="@drawable/custom_btn1_textcolor"/>


</LinearLayout>